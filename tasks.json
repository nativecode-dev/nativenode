{
  "tasks": {
    "build": [
      "[references]",
      "[clean]",
      "[source]",
      "[build:compile]"
    ],
    "build:compile": [
      "lerna run build"
    ],
    "ci:build": [
      "[build:compile]"
    ],
    "ci:configure": [
      "@.citools/setup-git ${BUILD_REPO_BRANCH} ${BUILD_REPO_GIT} ${BUILD_REPO_EMAIL}",
      "@.citools/setup-ssh ${BUILD_REPO_DOMAIN} ${BUILD_REPO_SSHKEY_PATH} ${BUILD_REPO_DOMAIN_SSH}"
    ],
    "ci:install": [
      "npm ci",
      "@npm config set '//registry.npmjs.org/:_authToken' ${NPM_TOKEN}",
      "lerna bootstrap"
    ],
    "ci:publish:canary": [
      "[ci:configure]",
      "[ci:test]",
      ".citools/lerna-publish canary"
    ],
    "ci:publish:prerelease": [
      "[ci:configure]",
      "[ci:test]",
      ".citools/lerna-publish prerelease"
    ],
    "ci:publish:release": [
      "[ci:configure]",
      "[ci:test]",
      ".citools/lerna-publish release"
    ],
    "ci:test": [
      "[ci:build]",
      "nyc mocha --config .ci/.mocharc.json"
    ],
    "clean": [
      "rimraf .cache",
      "rimraf packages/*/lib",
      "rimraf **/*.tsbuildinfo"
    ],
    "commit": [
      "git add -A .",
      "git-cz"
    ],
    "coverage": [
      "nyc report --reporter=text-lcov | coveralls"
    ],
    "exec": [
      "lerna run exec"
    ],
    "install": [
      "npm install"
    ],
    "references": [
      "ts-node promon/references.ts"
    ],
      "source": [
      "[source:format]",
      "[source:lint]"
    ],
    "source:format": [
      "tasks sort 'packages/**/*.json'",
      "@prettier --loglevel silent --write '*/*/src/**/*.ts'"
    ],
    "source:lint": [
      "tslint --project tsconfig.json --config tslint.json"
    ],
    "test": [
      "[build:compile]",
      "nyc mocha"
    ],
    "upgrade": [
      "npx npm-check -y",
      "lerna run upgrade"
    ]
  }
}
